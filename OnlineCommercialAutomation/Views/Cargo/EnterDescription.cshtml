@model OnlineCommercialAutomation.Models.Entities.CargoTracking
@{
    ViewBag.Title = "EnterDescription";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Enter Description</h2>
<br />
<form class="form-group" method="post">
    <label>Description</label>
    @Html.TextAreaFor(x => x.Explanation, new { @class = "form-control", @required = "" })
    <br />
    @Html.LabelFor(x => x.date)
    <input type="text" name="Date" value="@DateTime.Now" class="form-control" readonly />
    <br />
    <button class="btn btn-primary" style="width:100px"><i class="fas fa-plus"></i> Add</button>
    <a class="btn btn-secondary" href="/Cargo/Index" style="width:100px;color:white"><i class="fas fa-backspace"></i>  Cancel</a>
</form>



