@using OnlineCommercialAutomation.Models.Entities
@model List<Admin>
@{
    ViewBag.Title = "Admins";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2 style="margin-left:20px">
    Admins <a href="/ToDoList/AddAdmin" class="btn btn-primary" style="width:100px;position:absolute;right:50px"><i class="fas fa-plus"></i> Add</a>
</h2>
<br />
<table id="tbl67" class="table table-bordered table-striped" style="margin-top:20px">
    <thead>
        <tr>
            <th>Make it Passive</th>
            <th>ADMİN</th>
            <th>Authority</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td><a href="/ToDoList/DeleteAdmin/@x.Id" class="text-danger" data-toggle="tooltip" data-placement="top" title="Delete" onclick="return confirm('Are you sure you want to passive the admin?')"><strong>Passive</strong></a></td>
                <td><a href="/ToDoList/UpdateAdmin/@x.Id">@x.Name</a></td>
                <td><a href="/ToDoList/UpdateAdmin/@x.Id">@x.Authority</a></td>
            </tr>
        }
    </tbody>
</table>
<br />


