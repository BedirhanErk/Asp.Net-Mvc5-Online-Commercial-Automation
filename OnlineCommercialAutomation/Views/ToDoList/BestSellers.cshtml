@using OnlineCommercialAutomation.Models.Entities
@model List<Product>
@{
    ViewBag.Title = "BestSellers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2 style="margin-left:20px">
    Edit Home Page: 'Best Sellers'   <a href="/ToDoList/Index" class="btn btn-secondary" style="width:100px;position:absolute;right:50px"><i class="fas fa-backspace fa-spin"></i> Cancel</a>
</h2>
<br />
<h5 style="margin-left:20px">
    The 'Best Seller' that can be shown on the homepage is <strong style="color:red">4</strong> pieces.
</h5>
<br />
@if (Model.Count > 0)
{
    <table id="tbl1" class="table table-bordered table-striped" style="margin-top:20px">
        <thead>
            <tr>
                <th>Name</th>
                <th>Image</th>
                <th>Home Page Visibility</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td><a href="/ToDoList/UpdateBestSellers/@x.Id" class="">@x.ProductsName</a></td>
                    <td><a href="/ToDoList/UpdateBestSellers/@x.Id" class=""><img  src="@x.ProductImage" style="width:100px;height:100px"/></a></td>
                    @if (x.BestSellers == true)
                    {
                        <td><a style="color:green" href="/ToDoList/UpdateBestSellers/@x.Id">Active</a></td>
                    }
                    else
                    {
                        <td><a style="color:red" href="/ToDoList/UpdateBestSellers/@x.Id">Passive</a></td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h4>There are no products to display homepage here.</h4>
    </div>
}

<br />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>
