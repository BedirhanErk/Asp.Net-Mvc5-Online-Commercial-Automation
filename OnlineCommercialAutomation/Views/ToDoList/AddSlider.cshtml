@model OnlineCommercialAutomation.Models.Entities.HomeImage
@{
    ViewBag.Title = "AddSlider";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>New Slider</h2>
<br />
@using (Html.BeginForm("AddSlider", "ToDoList", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <form class="form-group" method="post">
        <div class="form-group row">
            <h3 class="col-md-4">Image</h3>
            <div class="col-md-4"><input type="file" name="SliderImage" required=""/></div>
        </div>
        <br />
        <div class="form-group row" >
            <h3  class="col-md-5">Home Page Visibility</h3>
            <div class="col-md-2">
                @Html.CheckBoxFor(x => x.Slider, new { @class = "form-control" })
            </div>
        </div>
        <br />
        <button class="btn btn-primary" type="submit" style="width:100px"><i class="fas fa-plus"></i> Add</button>
        <a class="btn btn-secondary" href="/ToDoList/Slider" style="width:100px;color:white"><i class="fas fa-backspace"></i> Cancel</a>
    </form>
}
<br />

