
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zxx">

<head>
    <title>WANTED.com</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />
    <meta name="keywords" content="Chairs Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <link rel="stylesheet" href="~/webhomhe/css/bootstrap.css">
    <link href="~/webhomhe/css/css_slider.css" type="text/css" rel="stylesheet" media="all">
    <link rel="stylesheet" href="~/webhomhe/css/style.css" type="text/css" media="all" />
    <link href="~/webhomhe/css/font-awesome.min.css" rel="stylesheet">
