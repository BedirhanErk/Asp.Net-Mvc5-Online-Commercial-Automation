          rel="stylesheet">
</head>
<body>
    <div class="main-top" id="home">
        <header>
            <div class="container-fluid">
                <div class="header d-md-flex align-items-center py-sm-3 py-2 px-sm-2 px-1">
                    <div id="logo">
                        <h1><a href="/Homepage/Index">WANTED</a></h1>
                    </div>
                    <div class="nav_w3ls ml-5">
                        <nav>
                            <label for="drop" class="toggle">Menu</label>
                            <input type="checkbox" id="drop" />
                            <ul class="menu">
                                <li><a href="/HomePage/Index">Home</a></li>
                                <li><a href="/List/Product">Products</a></li>
                                @if (HttpContext.Current.User.Identity.IsAuthenticated)
                                {
                                    <li><a href="/CurrentPanel/MyOrder">My Orders</a></li>
                                    <li><a href="/CurrentPanel/CargoTracking">Cargo Tracking</a></li>
                                    <li><a href="/CurrentPanel/IncomingMessages">Messagess</a></li>
                                }
                                <li><a href="/About/Index">About Us</a></li>
                                <li><a href="/Contact/Index">Help</a></li>
                            </ul>
                            <ul style="position:absolute;right:60px">
                                @if (HttpContext.Current.User.Identity.IsAuthenticated)
                                {
                                    <li>
                                        @Html.ActionLink(HttpContext.Current.User.Identity.Name, "Index", "CurrentPanel", null, null)
                                    </li>
                                    <li><a href="/Login/Logout" class="drop-text">Sign Out</a></li>
                                }
                                else
                                {
                                    <li><a href="/Login/Index">Register</a></li>
                                    <li><a href="/Login/Index">Login</a></li>
                                }
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </header>
    </div>

    <div>
        @RenderBody()
    </div>

    <footer class="bg-li py-5">
        <div class="container py-xl-5 py-lg-3">
            <div class="row footer-grids">
                <div class="col-lg-4 footer-grid mt-lg-3">
                    <h2>
                        <a class="logo-2" href="/Homepage/Index">WANTED</a>
                    </h2>
                </div>
                <div class="col-lg-2 col-sm-6 footer-grid mt-lg-3 mt-4">
                    <h3 class="mb-sm-4 mb-3 pb-3">Most Wanted</h3>
                    <ul class="list-unstyled">
                        <li>
                            <a href="/List/Headphone">Headphone</a>
                        </li>
                        <li>
