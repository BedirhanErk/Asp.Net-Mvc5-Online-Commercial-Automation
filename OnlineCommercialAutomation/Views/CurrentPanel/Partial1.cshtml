@model  OnlineCommercialAutomation.Models.Entities.Current

@using (Html.BeginForm("Update", "CurrentPanel", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <form class="form-horizontal">
        @Html.HiddenFor(x => x.Id, new { @class = "form-control" })
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CurrentsName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">Surname</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CurrentsSurname, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName2" class="col-sm-2 col-form-label">City</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CurrentsCity, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputExperience" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Image</label>
            <div class="col-sm-10">
                <input type="file" name="CurrentImage" />
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-warning">Update</button>
            </div>
        </div>
    </form>
}